<h1>Found the following matches</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <%= form_tag books_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
      <% end %>

      <%= link_to "New Book".html_safe, new_book_path, :class=>"btn btn-md btn-primary" %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<div class="col-md-6">
  <table class="table">
    <thead>
      <tr>
        <th>cover</th>
        <th>author</th>
        <th>title</th>
        <th>year</th>
        <th>action</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <%= form_for book do |b| %>
            <%= b.hidden_field(:author, :value => book.author) %>
            <%= b.hidden_field(:title, :value => book.title) %>
            <%= b.hidden_field(:year, :value => book.year) %>
            <%= b.hidden_field(:image, :value => book.image) %>

          <td> <%= image_tag(book.image) %> <td>
          <td><%= book.author %></td>
          <td>
            <%= book.title %>
            <br>
            <%= book.subtitle %>
           </td>
          <td> <%= book.year %> </td>
          <td>
            <%= b.submit :class => "new_button btn btn-default" %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
