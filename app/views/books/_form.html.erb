<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-horizontal center">

<div class="form-group">
  <label class="col-sm-2 control-label">Author</label>
  <div class="col-sm-10">
    <%= f.text_field :author, :class => "form-control"%>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">Title</label>
  <div class="col-sm-10">
    <%= f.text_field :title, :class => "form-control"%>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">Subtitle</label>
  <div class="col-sm-10">
    <%= f.text_field :subtitle, :class => "form-control"%>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">Published</label>
  <div class="col-sm-10">
    <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1) %>
  </div>
</div>

<%= f.submit :class => "new_button btn btn-default"%>
</div>
<% end %>
