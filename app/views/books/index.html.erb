<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>author</th>
      <th>year</th>
      <th>action</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.author %></td>
        <td>
          <%= book.year %>
        </td>
        <td>
          <%= link_to 'Show', book %>
          <%= link_to 'Edit', edit_book_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
