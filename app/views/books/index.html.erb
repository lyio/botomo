<h1>Listing Books</h1>

<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Go!</button>
        <%= link_to "New Book".html_safe, new_book_path, :class=>"btn btn-md btn-primary" %>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
</div><!-- /.row -->

<div class="col-md-6">
  <table class="table">
    <thead>
      <tr>
        <th>author</th>
        <th>title</th>
        <th>year</th>
        <th>created<th>
        <th>action</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.author %></td>
          <td>
            <%= book.title %>
            <br>
            <%= book.subtitle %>
           </td>
          <td> <%= book.year %> </td>
          <td> <%= time_ago_in_words(book.created_at) %> </td>
          <td>
            <button type="button" class="btn btn-md btn-default">
              <%= link_to 'Show', book %>
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
